<%- include("../partials/header") %>
<div class="container my-5">
	<h1 class="text-center my-3">Insert a New Campground </h1>
	<div style="width: 35%; margin: 0 auto">
		<form action="/campgrounds" method="POST"> 
		<div class="form-group">
			<input class="form-control" text="text" name="name" placeholder="name">
		</div>
		<div class="form-group">
			<input class="form-control" text="text" name="image" placeholder="image url">
		</div>
		<div class="form-group">
			<input class="form-control" text="text" name="description" placeholder="description">
		</div>
		<div class="form-group">
			<button class="btn btn-primary btn-lg btn-block">Submit</button>
		</div>
		</form>
	</div>
</div>



<%- include("../partials/footer") %>