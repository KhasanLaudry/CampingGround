<%- include("../partials/header") %>
<div class="container my-5">
	<h1 class="text-center my-3">Add Comment to <%=campground.name%></h1>
	<div style="width: 35%; margin: 0 auto">
		<form action="/campgrounds/<%=campground._id%>/comments" method="POST"> 
		<div class="form-group">
			<input class="form-control" text="text" name="comment[text]" placeholder="comment">
		</div>
		<div class="form-group">
			<input class="form-control" text="text" name="comment[user]" placeholder="username">
		</div>
		<div class="form-group">
			<button class="btn btn-primary btn-lg btn-block">Submit</button>
		</div>
		</form>
	</div>
</div>



<%- include("../partials/footer") %>